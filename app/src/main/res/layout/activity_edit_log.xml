<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.EditLogActivity"> <com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar_edit_log" android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/beige_primary"
    app:title="Edit Catatan" app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Judul">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_log_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="Apa yang kamu pikirkan?">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_log_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:gravity="top"
                    android:inputType="textMultiLine|textCapSentences" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_location_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Lokasi belum ditambahkan"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btn_get_location"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Ubah Lokasi" android:backgroundTint="@color/beige_primary"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    />

                <Button
                    android:id="@+id/btn_open_maps"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Lihat di Peta"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:enabled="false"
                    app:iconTint="@color/beige_primary"
                    android:textColor="@color/beige_primary"
                    app:strokeColor="@color/beige_primary"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_update_log" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige_primary"
                android:padding="12dp"
                android:text="Update Log" android:textStyle="bold"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>